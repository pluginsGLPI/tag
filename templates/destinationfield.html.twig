{% import 'components/form/fields_macros.html.twig' as fields %}

<div class="d-none" data-glpi-itildestination-field-config-display-condition="{{ CONFIG_SPECIFIC_VALUES }}">
    {% include "@tag/dropdown.html.twig" with {
        'input_name'         : specific_values_extra_field.input_name,
        'selected_tags'      : specific_values_extra_field.selected_tags,
        'available_tags'     : specific_values_extra_field.available_tags,
        'tags_color'         : specific_values_extra_field.tags_color,
        'show_search_tooltip': show_search_tooltip|default(true),
        'dropdown_params'    : {
            'no_label'   : true,
            'mb'         : '',
            'field_class': '',
            'full_width' : true,
        }
    } %}
</div>

<div class="d-none" data-glpi-itildestination-field-config-display-condition="{{ CONFIG_SPECIFIC_ANSWERS }}">
    {{ fields.dropdownArrayField(
        specific_answers_extra_field.input_name,
        '',
        specific_answers_extra_field.possible_values,
        "",
        options|merge({
            field_class        : '',
            mb                 : '',
            no_label           : true,
            display_emptychoice: true,
            values             : specific_answers_extra_field.values|default([]),
            emptylabel         : specific_answers_extra_field.empty_label,
            aria_label         : specific_answers_extra_field.empty_label,
            multiple           : true,
        })
    ) }}
</div>
